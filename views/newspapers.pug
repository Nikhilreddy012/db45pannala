extends layout

block content
  h1= title
  
  div(class="container-fluid")
        div(class="row")
            -
                let newspapers = results
            each np, index in newspapers 
                div(class="col-sm-2" onclick=`buy(${index})`) #{np.name} #{np.language} #{np.price}
            script.
                function buy(itemNo){
                    alert(`You purchased Item ${itemNo+1}`)
                }